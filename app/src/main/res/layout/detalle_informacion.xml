<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalleI"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.berenice.proyectohoteles.DetalleInformacion">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imagenDetalleI" />


    <TextView
        android:text="Hoteles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/_nombreI"
        android:layout_below="@+id/imagenDetalleI"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_dark"
        />

    <TextView
        android:text="Correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/_direccionI"
        android:layout_below="@+id/_nombreI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp" />

    <TextView
        android:text="Descripcion:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:id="@+id/_descripcionI"
        android:layout_alignBottom="@+id/_direccionI"
        android:layout_marginBottom="37dp" />

    <TextView
        android:text="Correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/_correoI"
        android:layout_below="@+id/_direccionI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:text="Atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onStartReserva"
        android:id="@+id/_atras"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/_descripcionI"
        android:layout_toEndOf="@+id/_descripcionI"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp" />

</RelativeLayout>