<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/res">

    <Button
        android:text="Comidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comida"
        android:background="@android:color/transparent"
        android:textSize="26sp"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_body_color"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:onClick="onStartComidasButton"
        android:layout_alignBaseline="@+id/bar"
        android:layout_alignBottom="@+id/bar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <Button
        android:text="Bebidas"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:onClick="onStartBebidasButton"
        android:textSize="26sp"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Desayunos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:textStyle="normal|bold"
        android:textSize="26sp"
        android:id="@+id/Desayuno"
        android:textAllCaps="false"
        android:onClick="onDesayunoButton"
        android:layout_above="@+id/bar"
        android:layout_toRightOf="@+id/bar"
        android:layout_toEndOf="@+id/bar"
        android:layout_marginBottom="12dp" />

</RelativeLayout>