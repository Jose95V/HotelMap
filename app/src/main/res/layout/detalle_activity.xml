<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.berenice.proyectohoteles.MainActivity">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/imagenDetalle"

        android:layout_alignParentTop="true" />


    <TextView
        android:text="Habitación"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/_nombre"
        android:layout_below="@+id/imagenDetalle"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_dark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/_direccion"
        android:layout_below="@+id/_descripcion"
        android:layout_alignLeft="@+id/_descripcion"
        android:layout_alignStart="@+id/_descripcion"
        android:layout_marginTop="34dp" />

    <TextView
        android:text="Descripcion:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:id="@+id/_descripcion"
        android:layout_below="@+id/_nombre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:text="Precio"
        android:layout_width="35pt"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/_descripcion"
        android:layout_alignBottom="@+id/_descripcion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Personas"
        android:layout_width="35pt"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/_direccion"
        android:layout_alignBottom="@+id/_direccion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Descripción"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/_correo"
        android:text="ertwert"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Button
        android:text="Reservación"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onStartReserva"
        android:id="@+id/_reservacion"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />


</RelativeLayout>