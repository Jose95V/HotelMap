<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/hotel">

    <Button
        android:text="Sala de Pin Pong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pin"
        android:background="@android:color/transparent"
        android:textSize="26sp"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:onClick="onPinButton"
        android:layout_above="@+id/bar"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Bar"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:onClick="onBarButton"
        android:textSize="26sp"
        android:textColor="@color/cast_intro_overlay_background_color"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Piscina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/cast_intro_overlay_background_color"
        android:textStyle="normal|bold"
        android:textSize="26sp"
        android:id="@+id/piscina"
        android:textAllCaps="false"
        android:onClick="onPiscinaButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="JardÃ­n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pin"
        android:layout_toRightOf="@+id/bar"
        android:background="@android:color/transparent"
        android:layout_toEndOf="@+id/bar"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:onClick="onJardinButton"
        android:id="@+id/jardin"
        android:textAllCaps="false"
        android:textColor="@color/cast_intro_overlay_background_color"
        android:textSize="26sp"
        android:textStyle="normal|bold" />

</RelativeLayout>